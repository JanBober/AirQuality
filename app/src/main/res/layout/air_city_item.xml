<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="cityName"
            type="String" />

    </data>

    <TableLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:id="@+id/city"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@{cityName}"
                style="@style/adapterTextItem"/>

            <ImageView
                android:id="@+id/stIndexLevelId"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/so2IndexLevelId"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/no2IndexLevelId"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/pm10IndexLevelId"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/pm25IndexLevelId"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/o3IndexLevelId"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                tools:ignore="ContentDescription" />

        </TableRow>

    </TableLayout>

</layout>